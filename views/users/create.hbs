<h1 style="margin-top: 30px !important">Register</h1>
<form method="post" class="form-group col-md-4">
    <input type="text" name="firstName" class="form-control" id="firstName" placeholder="First Name" value="{{input.firstName}}" required></input>
    <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last Name" value="{{input.lastName}}" required></input>
    <input type="text" name="email" class="form-control" id="email" placeholder="E-mail" value="{{input.email}}" required></input>
    <input type="password" name="password" class="form-control" id="password" placeholder="Password" required></input>
    <input type="password" name="password2" class="form-control" id="password2" placeholder="Confirm Password" required></input>
    <input type="submit" class="btn btn-primary" value="Create" />
    <span style="color:red">{{error}}</span>
</form>